<%= form_with(model: activity_template) do |form| %>
  <% if activity_template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity_template.errors.count, "error") %> prohibited this activity_template from being saved:</h2>

      <ul>
        <% activity_template.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
