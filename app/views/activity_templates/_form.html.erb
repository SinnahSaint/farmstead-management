  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :default_values %>
    <%= form.text_area :default_values %>
  </div>

  <div class="field">
    <%= form.label :yield %>
    <%= form.text_area :yield %>
  </div>

  <div class="field">
    <%= form.label :resource_subtype_id %>
