<p id="notice"><%= notice %></p>
<%= link_to 'Create New Person', new_person_path %>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <% unless person.inactive %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.phone %></td>
          <td><%= person.email %></td>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

