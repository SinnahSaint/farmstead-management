<p id="notice"><%= notice %></p>

<h1>Activity Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Default values</th>
      <th>Yield</th>
      <th>Resource subtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_templates.each do |activity_template| %>
      <tr>
        <td><%= activity_template.name %></td>
        <td><%= activity_template.description %></td>
        <td><%= activity_template.default_values %></td>
        <td><%= activity_template.yield %></td>
        <td><%= activity_template.resource_subtype_id %></td>
        <td><%= link_to 'Show', activity_template %></td>
        <td><%= link_to 'Edit', edit_activity_template_path(activity_template) %></td>
        <td><%= link_to 'Destroy', activity_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

