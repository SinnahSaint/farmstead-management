<p id="notice"><%= notice %></p>
<%= link_to 'New Task', new_task_path %>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Person</th>
      <th>Start</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <% unless task.complete %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.person&.name || "Not Assigned" %></td>
        <td><%= task.start %></td>
        <td><%= task.due %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

